<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mcxa.lightingcontrol.MainActivity">

    <TextView
        android:id="@+id/lchltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Lamp"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:theme="@style/PrimaryButton"
        android:id="@+id/lchlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@id/lchltv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/lchloff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        app:layout_constraintTop_toBottomOf="@id/lchltv"
        app:layout_constraintLeft_toRightOf="@id/lchlon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/kchltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="Office Christmas Lights"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lchlon" />

    <android.support.v7.widget.AppCompatButton
        android:theme="@style/PrimaryButton"
        android:id="@+id/kchlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@id/kchltv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/kchloff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        app:layout_constraintTop_toBottomOf="@id/kchltv"
        app:layout_constraintLeft_toRightOf="@id/kchlon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/lvltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="Living Room Lamp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kchlon" />

    <android.support.v7.widget.AppCompatButton
        android:theme="@style/PrimaryButton"
        android:id="@+id/lvlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@id/lvltv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/lvloff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        app:layout_constraintTop_toBottomOf="@id/lvltv"
        app:layout_constraintLeft_toRightOf="@id/lvlon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/bchltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="Bedroom Humidifier"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlon" />

    <android.support.v7.widget.AppCompatButton
        android:theme="@style/PrimaryButton"
        android:id="@+id/bchlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@id/bchltv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bchloff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        app:layout_constraintTop_toBottomOf="@id/bchltv"
        app:layout_constraintLeft_toRightOf="@id/bchlon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/bltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Bedroom Lamp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bchlon" />

    <android.support.v7.widget.AppCompatButton
        android:theme="@style/PrimaryButton"
        android:id="@+id/blon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        app:layout_constraintTop_toBottomOf="@id/bltv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bloff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        app:layout_constraintTop_toBottomOf="@id/bltv"
        app:layout_constraintLeft_toRightOf="@id/blon"
        android:layout_marginStart="10dp"/>
</android.support.constraint.ConstraintLayout>
